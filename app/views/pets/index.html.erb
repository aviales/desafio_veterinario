<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Pets</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Breed</th>
        <th>Birthday</th>
        <th>Visits</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pets.each do |pet| %>
        <tr>
          <td><%= pet.name %></td>
          <td><%= pet.breed %></td>
          <td><%= pet.birthday %></td>
          <td><%= pet.pet_histories_count %></td>
          <td><%= link_to 'Show', pet %></td>
          <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
          <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Pet', new_pet_path %>
  <%= link_to 'Main', clients_path %>
</div>

